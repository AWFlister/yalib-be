<h1>Publishers</h1>

<div class='container'>
    <p> This is the main Publishers page. Below is the list of publishers </p>
    <p> <%= link_to "Add New Publisher", new_publisher_path %> </p>

    <table>
        <thead>
            <tr>
            <th>Name</th>
            <th>City</th>
            <th colspan="3"></th>
            </tr>
        </thead>

        <tbody>
            <% unless @publishers.empty? %>
                <% @publishers.each do |publisher| %>
                <tr>
                    <td><%= publisher.name %></td>
                    <td><%= publisher.city %></td>
                    <td><%= link_to "Edit", edit_publisher_path(publisher) %></td>
                    <td><%= link_to "Destroy", publisher_path(publisher), method: :delete %></td>
                </tr>
                <% end %>
            <% else %>
                <tr>
                    <td colspan=5> No Publishers Available!</td>
                </tr> 
            <% end %>   
        </tbody>
    </table>
</div>